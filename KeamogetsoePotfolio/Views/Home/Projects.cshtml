@model List<KeamogetsoePotfolio.Models.Project>
    @{
    ViewData["Title"] = "Projects";
    }

    <div class="projects-section">
        <h2 class="section-title text-center mb-5">Some of My Recent Works</h2>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var project in Model)
        {
            <div class="col">
                <div class="project-card-new">
                    @if (!string.IsNullOrEmpty(project.ImageUrl))
                    {
                    <div class="project-image-wrapper">
                        <img src="@project.ImageUrl" alt="Image for @project.Title" class="project-image-new img-fluid">
                    </div>
                    }

                    <div class="project-card-body">
                        <h3 class="project-title-new">@project.Title</h3>
                        <p class="project-description-new">@project.Description</p>

                        <div class="tech-badges-new">
                            @foreach (var tech in project.Technologies)
                            {
                            <span class="tech-badge-new">@tech</span>
                            }
                        </div>

                        <div class="project-links-new">
                            @if (!string.IsNullOrEmpty(project.GithubUrl) && project.GithubUrl != "#")
                            {
                            <a href="@project.GithubUrl" target="_blank" rel="noopener noreferrer" class="project-link-btn btn btn-sm">GitHub</a>
                            }
                            @if (!string.IsNullOrEmpty(project.LiveDemoUrl) && project.LiveDemoUrl != "#")
                            {
                            <a href="@project.LiveDemoUrl" target="_blank" rel="noopener noreferrer" class="project-link-btn btn btn-sm">Live Demo</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
